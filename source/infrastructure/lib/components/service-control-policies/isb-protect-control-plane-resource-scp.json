{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ProtectIsbControlPlaneResources",
      "Effect": "Deny",
      "Action": ["*"],
      "Resource": [
        "arn:*:iam::*:role/InnovationSandbox-${namespace}-IntermediateRole",
        "arn:*:iam::*:role/InnovationSandbox-${namespace}-OrgMgtRole",
        "arn:*:iam::*:role/InnovationSandbox-${namespace}-IdcRole",
        "arn:*:iam::*:role/AWSReservedSSO*",
        "arn:*:*:*:*:*Isb-${namespace}*",
        "arn:*:iam::*:role/stacksets-exec-*",
        "arn:*:iam::*:saml-provider/*AWSSSO*"
      ],
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": [
            "arn:*:iam::*:role/InnovationSandbox-${namespace}*",
            "arn:*:iam::*:role/aws-reserved/sso.amazonaws.com/*AWSReservedSSO_${namespace}_IsbAdmins*",
            "arn:*:iam::*:role/stacksets-exec-*",
            "arn:*:iam::*:role/AWSControlTowerExecution"
          ]
        }
      }
    },
    {
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": [
            "arn:*:iam::*:role/AWSControlTowerExecution",
            "arn:*:iam::*:role/stacksets-exec-*"
          ]
        }
      },
      "Action": ["*"],
      "Resource": [
        "arn:*:cloudtrail:*:*:trail/aws-controltower-*",
        "arn:*:events:*:*:rule/aws-controltower-*",
        "arn:*:events:*:*:rule/*AWSControlTower*",
        "arn:*:lambda:*:*:function:aws-controltower-*",
        "arn:*:logs:*:*:log-group:*aws-controltower*",
        "arn:*:sns:*:*:aws-controltower-*",
        "arn:*:iam::*:role/aws-controltower-*",
        "arn:*:iam::*:role/*AWSControlTower*"
      ],
      "Effect": "Deny",
      "Sid": "ProtectControlTowerResources"
    },
    {
      "Condition": {
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:*:iam::*:role/AWSControlTowerExecution"
        }
      },
      "Action": [
        "config:DeleteConfigurationRecorder",
        "config:DeleteDeliveryChannel",
        "config:DeleteRetentionConfiguration",
        "config:PutConfigurationRecorder",
        "config:PutDeliveryChannel",
        "config:PutRetentionConfiguration",
        "config:StopConfigurationRecorder"
      ],
      "Resource": ["*"],
      "Effect": "Deny",
      "Sid": "DenyConfigActions"
    },
    {
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/aws-control-tower": "managed-by-control-tower"
        },
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:*:iam::*:role/AWSControlTowerExecution"
        }
      },
      "Action": ["config:*"],
      "Resource": ["*"],
      "Effect": "Deny",
      "Sid": "ProtectControlTowerTaggedConfigResources"
    },
    {
      "Condition": {
        "ForAnyValue:StringEquals": {
          "aws:TagKeys": "aws-control-tower"
        },
        "ArnNotLike": {
          "aws:PrincipalARN": "arn:*:iam::*:role/AWSControlTowerExecution"
        }
      },
      "Action": ["config:TagResource", "config:UntagResource"],
      "Resource": "*",
      "Effect": "Deny",
      "Sid": "DenyControlTowerConfigTagActions"
    }
  ]
}
