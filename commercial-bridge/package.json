{
  "name": "commercial-bridge",
  "version": "1.0.0",
  "description": "Commercial account API bridge for GovCloud Innovation Sandbox",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces",
    "deploy": "npm run build && npm run cdk:deploy",
    "cdk:deploy": "cd infrastructure && cdk deploy --all --require-approval never",
    "cdk:destroy": "cd infrastructure && cdk destroy --all",
    "cdk:synth": "cd infrastructure && cdk synth",
    "roles-anywhere:generate-ca": "bash scripts/generate-ca-cert.sh || powershell -ExecutionPolicy Bypass -File scripts/generate-ca-cert.ps1",
    "roles-anywhere:generate-client-cert": "bash scripts/generate-client-cert.sh || powershell -ExecutionPolicy Bypass -File scripts/generate-client-cert.ps1"
  },
  "workspaces": [
    "infrastructure",
    "lambdas/*"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.2"
  }
}
